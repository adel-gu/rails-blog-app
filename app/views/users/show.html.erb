<section>
  <%= render partial: "shared/user", locals: { user: @user }%>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Bio</h5>
      <p class="card-text"><%= @user.bio %></p>
    </div>
  </div>
<section>
<section>
  <%= render partial: 'shared/post', collection: @user.recent_three_posts %>
  <button>
    <%= link_to 'See all posts', "/users/#{@user.id}/posts" %>
  </button>
</section>